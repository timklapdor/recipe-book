  <li><button type="button" class="tag button is-checked" data-filter="all">show all</button></li>
  {% for item in collections.allDiets %}
  <li><button type="button" class="tag button mix diet {{ item | slug }}" data-toggle=".{{ item | slug }}">{{ item }}</button></li>
  {% endfor %}

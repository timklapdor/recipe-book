  <ul>
  {% for item in collections.allDiets %}
    <li class="tag diet mix {{ item | slug }} button" data-toggle=".{{ item | slug }}">{{ item }}</li>
  {% endfor %}
  </ul>

<h2>Status</h2>
<ul class="status">
  <li class="tag status mix button" data-toggle=".proven"><strong>Proven</strong><svg viewBox="0 0 55 90" width="100"><use xlink:href="#status-proven" title="Proven"/></svg></li>
  <li class="tag status mix button" data-toggle=".tweak"><strong>Tweak</strong><svg viewBox="0 0 55 90" width="100"><use xlink:href="#status-tweak" title="Proven"/></svg></li>
  <li class="tag status mix button" data-toggle=".untested"><strong>Untested</strong><svg viewBox="0 0 55 90" width="100"><use xlink:href="#status-untested" title="Proven"/></svg></li>
</ul>

<h2>Effort</h2>
  <ul>
  {% for item in collections.allEfforts | sort(false, true) %}
    <li class="tag effort mix button" data-toggle=".{{ item | slug }}">{{ item }}</li>
  {% endfor %}
  </ul>

<h2>Categories</h2>
  <ul>
  {% for item in collections.allCategories | sort(false, true)  %}
    <li class="tag category mix button" data-toggle=".{{ item | slug }}">{{ item }}</li>
  {% endfor %}
  </ul>

<h2>Cuisines</h2>
  <ul>
  {% for item in collections.allCuisines | sort(false, true)  %}
    <li class="tag cuisine mix button" data-toggle=".{{ item | slug }}">{{ item }}</li>
  {% endfor %}
  </ul>



</section>

<section class="gridup container">
{% for post in collections.sortedRecipes %}
  <article class="grid-item mix
  {% for item in post.data.diet %}{{ item | slug }} {% endfor %}
  {% for item in post.data.status %}{{ item | slug }} {% endfor %}
  {% for item in post.data.effort %}{{ item | slug }} {% endfor %}
  {% for item in post.data.categories %}{{ item | slug }} {% endfor %}
  {% for item in post.data.cuisine %}{{ item | slug }} {% endfor %}
  ">
      <a href="{{ post.url | url }}" style="background-image: linear-gradient(to top,rgba(0,0,0,.3),rgba(0,0,0,.3)), url(images/{{ post.data.image | url }}); background-position: center center; background-size: cover;">
      <h2>{{ post.data.title }}</h2>
      <p>{{ post.data.description }}</p>
    </a>
  </article>
{% endfor %}
</section>

<script src="{{ '/assets/mixitup.min.js' | url}}"></script>
<script>

var mixer = mixitup('.gridup', {
    controls: {
        toggleLogic: 'and'
    }
});

</script>


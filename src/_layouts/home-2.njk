<body class="home">

<header class="brand">
  <a href="{{ '/' | url }}">
    <h1 class="logo-present">{{ title }}</h1>
    <img src="{{ '/assets/recipe-book-blk.svg' | url }}" alt="Recipe Book Logo">
  </a>

</header>

<section class="tags">

<h2>Diet</h2>

